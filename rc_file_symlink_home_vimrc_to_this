
colorscheme vividchalk
filetype plugin on
set background=dark
set showcmd
set number
set printoptions=number:y
syntax on

" all tab stuff to 2
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set pastetoggle=<F12>
set autoindent
set smartindent

" https://stackoverflow.com/questions/4760428/how-can-i-make-vims-j-and-gq-commands-use-one-space-after-a-period
set nojoinspaces

" http://damien.lespiau.name/blog/2009/03/18/per-project-vimrc/
set exrc            " enable per-directory .vimrc files
set secure          " disable unsafe commands in local .vimrc files

so ~/.vim/abbrevs.vim
so ~/.vim/filetype.vim

autocmd BufNewFile,BufReadPost,FilterReadPost,FileReadPost,Syntax * SpaceHi

" enable pathogen
call pathogen#infect()
syntax enable

" vertically align on =
" :Tab /=

" vertically align on :, w/o adding space before :
" :Tab /:\zs

" Erlang Skeletons
let g:erl_author="Kevin Baird"
let g:erl_company="Weedmaps"

let g:mix_format_on_save = 1

call plug#begin('~/.vim/plugged')
Plug 'mhinz/vim-mix-format'
call plug#end()

