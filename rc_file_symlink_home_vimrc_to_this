
colorscheme vividchalk
filetype plugin on
set background=dark
set showcmd
set number
syntax on

" all tab stuff to 2
set tabstop=2
set softtabstop=2
set shiftwidth=2
set cinoptions=>2
set expandtab
set pastetoggle=<F12>
set autoindent
set smartindent
set cindent

" http://damien.lespiau.name/blog/2009/03/18/per-project-vimrc/
set exrc            " enable per-directory .vimrc files
set secure          " disable unsafe commands in local .vimrc files

so ~/.vim/abbrevs.vim
so ~/.vim/filetype.vim

autocmd BufNewFile,BufReadPost,FilterReadPost,FileReadPost,Syntax * SpaceHi

" enable pathogen
call pathogen#infect()
syntax enable
"filetype plugin indent on - turn back on for CoffeeScript, if I ever do more

" vertically align on =
" :Tab /=

" vertically align on :, w/o adding space before :
" :Tab /:\zs
